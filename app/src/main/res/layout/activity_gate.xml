<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".gate.GateActivity">

    <TextView
        android:id="@+id/gate_fuel"
        style="@style/UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/undefined"
        app:layout_constraintStart_toEndOf="@+id/gate_coordinates_label"
        app:layout_constraintTop_toBottomOf="@+id/gate_cargo" />

    <TextView
        android:id="@+id/gate_ship_label"
        style="@style/UserInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/user_ship"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_coordinates" />

    <TextView
        android:id="@+id/gate_hull_label"
        style="@style/UserInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/user_hp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_ship_label" />

    <TextView
        android:id="@+id/gate_shield_label"
        style="@style/UserInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/user_shield"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_hull_label" />

    <TextView
        android:id="@+id/gate_cargo_label"
        style="@style/UserInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/user_cargo"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_shield_label" />

    <TextView
        android:id="@+id/gate_scanner_capacity_label"
        style="@style/UserInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/user_scanner_capacity"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_fuel_label" />

    <TextView
        android:id="@+id/gate_fuel_label"
        style="@style/UserInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/user_fuel"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_cargo_label" />

    <TextView
        android:id="@+id/gate_coordinates"
        style="@style/UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/undefined"
        app:layout_constraintStart_toEndOf="@+id/gate_coordinates_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gate_ship"
        style="@style/UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/undefined"
        app:layout_constraintStart_toEndOf="@+id/gate_coordinates_label"
        app:layout_constraintTop_toBottomOf="@+id/gate_coordinates_label" />

    <TextView
        android:id="@+id/gate_hp"
        style="@style/UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/undefined"
        app:layout_constraintStart_toEndOf="@+id/gate_coordinates_label"
        app:layout_constraintTop_toBottomOf="@+id/gate_ship" />

    <TextView
        android:id="@+id/gate_shield"
        style="@style/UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/undefined"
        app:layout_constraintStart_toEndOf="@+id/gate_coordinates_label"
        app:layout_constraintTop_toBottomOf="@+id/gate_hp" />

    <TextView
        android:id="@+id/gate_coordinates_label"
        style="@style/UserInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/user_coordinates"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gate_cargo"
        style="@style/UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/undefined"
        app:layout_constraintStart_toEndOf="@+id/gate_coordinates_label"
        app:layout_constraintTop_toBottomOf="@+id/gate_shield" />

    <TextView
        android:id="@+id/gate_scanner_capacity"
        style="@style/UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/undefined"
        app:layout_constraintStart_toEndOf="@+id/gate_coordinates_label"
        app:layout_constraintTop_toBottomOf="@+id/gate_cargo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gate_scan_result_list"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="100dp"
        android:transitionName="simple_activity_transition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_money"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/gate_action"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/land"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_scan_result_list" />

    <Button
        android:id="@+id/gate_scan"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_action" />

    <TextView
        android:id="@+id/gate_money_label"
        style="@style/UserInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/user_money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gate_scanner_capacity_label" />

    <TextView
        android:id="@+id/gate_money"
        style="@style/UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/undefined"
        app:layout_constraintStart_toEndOf="@+id/gate_coordinates_label"
        app:layout_constraintTop_toBottomOf="@+id/gate_scanner_capacity" />

</androidx.constraintlayout.widget.ConstraintLayout>