<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artamonov.millionplanets">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name="com.google.firebase.messaging.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGameActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FirebaseAuthentication"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainOptionsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ScanResultActivity"
            android:parentActivityName=".MainOptionsActivity" />
        <activity
            android:name=".MoveActivity"
            android:parentActivityName=".ScanResultActivity" />
        <activity android:name=".GateActivity" />
        <activity
            android:name=".PlanetActivity"
            android:parentActivityName=".GateActivity" />
        <activity
            android:name=".market.MarketActivity"
            android:label="@string/title_activity_market"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".sectors.SectorsActivity"
            android:label="@string/title_activity_market"
            android:parentActivityName=".PlanetActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="bbc9e5e6abfd52ec0b50443ba55e59f5c5e3f9f2" />
    </application>

</manifest>